<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:background="@drawable/input_normal"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:maxEms="10"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/hint_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="20dp"
            android:background="@drawable/textview_bg"
            android:drawableStart="@drawable/dot"
            android:drawablePadding="10dp"
            android:drawableTint="@color/dark_gray"
            android:elevation="0dp"
            android:fontFamily="@font/rebot"
            android:minHeight="10sp"
            android:paddingHorizontal="10dp"
            android:paddingTop="5dp"
            android:text="hellp"
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textFontWeight="800"
            android:textSize="20sp"
            android:translationZ="0dp"
            app:layout_constraintStart_toStartOf="@id/edit_text_id"
            app:layout_constraintTop_toTopOf="@id/edit_text_id"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/alert_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/danger"
            android:drawablePadding="10dp"
            android:drawableTint="@color/red"
            android:text="Allart"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textFontWeight="800"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_id"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/helper_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/helper"
            android:drawablePadding="10dp"
            android:drawableTint="@color/green"
            android:text="Helpe"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textFontWeight="800"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_text_id"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>